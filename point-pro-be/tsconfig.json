{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "target": "es6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/*"],
  "suppressImplicitAnyIndexErrors": true,
  "noImplicitAny": true
}
